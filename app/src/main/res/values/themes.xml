<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RTCGarmentex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/app_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="title_bold">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="normal_text">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/app_text_color</item>
    </style>

    <style name="label_text">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/label_text</item>
    </style>

    <style name="error_tv">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="error_et">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="edit_text">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/app_text_color</item>
    </style>

    <style name="app_btn">
        <item name="android:colorButtonNormal">@color/app_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/app_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="my_checkbox_style" parent="normal_text">
        <item name="buttonTint">@color/app_red</item>
    </style>

</resources>