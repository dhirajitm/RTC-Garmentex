<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="1dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="4dp">

    <TextView
        android:id="@+id/sr_no"
        style="@style/title_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp"
        android:text="1."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_no_lbl"
        style="@style/label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Order No."
        app:layout_constraintEnd_toStartOf="@id/buyer_lbl"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/sr_no"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buyer_lbl"
        style="@style/label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buyer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/order_no_lbl"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_no_tv"
        style="@style/normal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@id/order_no_lbl"
        app:layout_constraintStart_toStartOf="@id/order_no_lbl"
        app:layout_constraintTop_toBottomOf="@id/order_no_lbl" />

    <TextView
        android:id="@+id/buyer_tv"
        style="@style/normal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@id/buyer_lbl"
        app:layout_constraintStart_toStartOf="@id/buyer_lbl"
        app:layout_constraintTop_toBottomOf="@id/buyer_lbl" />

    <TextView
        android:id="@+id/supplier_lbl"
        style="@style/label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Supplier"
        app:layout_constraintEnd_toStartOf="@id/buyer_lbl"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/sr_no"
        app:layout_constraintTop_toBottomOf="@id/order_no_tv" />

    <TextView
        android:id="@+id/date_lbl"
        style="@style/label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/buyer_tv"
        app:layout_constraintTop_toBottomOf="@id/buyer_tv" />

    <TextView
        android:id="@+id/supplier_tv"
        style="@style/normal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@id/order_no_lbl"
        app:layout_constraintStart_toStartOf="@id/order_no_lbl"
        app:layout_constraintTop_toBottomOf="@id/supplier_lbl" />

    <TextView
        android:id="@+id/date_tv"
        style="@style/normal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@id/buyer_lbl"
        app:layout_constraintStart_toStartOf="@id/buyer_lbl"
        app:layout_constraintTop_toBottomOf="@id/date_lbl" />

</androidx.constraintlayout.widget.ConstraintLayout>