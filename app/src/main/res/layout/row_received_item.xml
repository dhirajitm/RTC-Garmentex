<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/receiving_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <!--Receiving Date-->
        <TextView
            android:id="@+id/receiving_date_tv"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:text="Receiving Date"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/receiving_date_et"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintTop_toBottomOf="@id/receiving_date_tv" />

        <!--Receiving Quantity-->
        <TextView
            android:id="@+id/receiving_qty_tv"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:text="Receiving Quantity"
            app:layout_constraintTop_toBottomOf="@id/receiving_date_et" />

        <EditText
            android:id="@+id/receiving_qty_et"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/receiving_qty_tv" />

        <!--Amount-->
        <TextView
            android:id="@+id/receiving_amount_tv"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:text="Amount"
            app:layout_constraintTop_toBottomOf="@id/receiving_qty_et" />

        <EditText
            android:id="@+id/receiving_amount_et"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/receiving_amount_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>